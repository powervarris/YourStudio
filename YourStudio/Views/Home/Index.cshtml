@model InquiryModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/wwwroot/css/site.css" />

</head>

<body>

    <div class="Inquiry">
        <div>YOUR INQUIRY</div>
    </div>

    @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
    {

        <div class="form-box">
            <div><strong>Send Inquiry</strong> | Inquiry List</div>
            <br />
            @Html.TextBoxFor(model => model.Name, new { placeholder = "Title", rows = 6, style = "width: 100%; border-radius: 5px;" })
            <br />
            <br />

            @Html.TextAreaFor(model => model.Message, new { placeholder = "Message", rows = 6, style = "width: 100%; border-radius: 5px;" })
            <br />
            <br />

            <div class="BtnCont">
                <input type="submit" value="DRAFT" id="DrfBtn" />
                <input type="submit" value="SEND" id="SbtBtn" />
            </div>

        </div>
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="FAQ">
            <div>FREQUENTLY ASKED QUESTIONS</div>
        </div>

        <br />
        <section class="faq1">
            <div><strong>General |</strong> Photo Studio Experience</div>

            <br />
            <span class="additional-text">CAN WE GET THE <strong>DIGITAL COPY?</strong></span>
            <span id="toggleText1" class="clickable-text" onclick="toggleMessage('toggleText1', 'hiddenMessage1')">V</span>

            <div id="hiddenMessage1" class="hidden-message">
                <br />
                <p>This is the first hidden message. Click the text to toggle visibility.</p>
            </div>

            <hr />
        </section>

        <section class="faq2">
            <span class="additional-text">DO YOU ACCEPT <strong>WALK-IN CLIENTS</strong></span>
            <span id="toggleText2" class="clickable-text" onclick="toggleMessage('toggleText2', 'hiddenMessage2')">V</span>

            <div id="hiddenMessage2" class="hidden-message">
                <br />
                <p>This is the second hidden message. Click the text to toggle visibility.</p>
            </div>

            <hr />
        </section>

        <section class="faq3">
            <span class="additional-text">WHERE ARE YOU <strong>LOCATED?</strong></span>
            <span id="toggleText3" class="clickable-text" onclick="toggleMessage('toggleText3', 'hiddenMessage3')">V</span>

            <div id="hiddenMessage3" class="hidden-message">
                <br />
                <p>This is the second hidden message. Click the text to toggle visibility.</p>
            </div>

            <hr />
        </section>

        <script>
            function toggleMessage(toggleTextId, hiddenMessageId) {
                var hiddenMessage = document.getElementById(hiddenMessageId);
                var toggleText = document.getElementById(toggleTextId);
                var currentDisplay = hiddenMessage.style.display;

                hiddenMessage.style.display = (currentDisplay === 'none') ? 'block' : 'none';
                toggleText.innerHTML = (currentDisplay === 'none') ? 'Λ' : 'V';
            }
        </script>

    }
</body>
</html>