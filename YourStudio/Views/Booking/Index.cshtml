@model BookingModel
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/wwwroot/css/Book.css" />
</head>
<body>
    <div class="DAT inline">
        <div>SELECT DATE AND TIME</div>
    </div>

    <div class="PST inline">
        <div>Philippine Standard Time (GMT + 8)</div>
    </div>

    <hr />


    @using (Html.BeginForm())
    {
        <br />
        @Html.EditorFor(model => model.dtmDate, new { htmlAttributes = new { @class = "datepicker" } })
    }

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    @section scripts {

        <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


        <script>

            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: "yy/mm/dd",
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "2024:2029"
                    buttonText: "<i class='fa fa-calendar'></i>"
                });
            });
        </script>

    }

</body>
</html>